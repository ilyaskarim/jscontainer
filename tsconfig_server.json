{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2017",
    "skipLibCheck": true,
    "allowJs": false,
    "outDir": "distNode",
    "rootDir": "server",
    "lib": ["es6", "esnext.asynciterable"],
    "types": ["node"]
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "distNode"]
}
